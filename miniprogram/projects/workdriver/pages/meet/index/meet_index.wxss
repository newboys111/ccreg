@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss"; 


.main {
	padding: 0rpx;
} 

.k-list {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	padding:30rpx;
}

.k-list .item {
	position: relative;
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 0 20rpx 0 0;
	overflow: hidden;
	border-radius: 10rpx;
	border-bottom-left-radius: 50rpx;
	border-top-right-radius: 50rpx;
	margin-bottom: 30rpx;
}

.k-list .item .left {
	width: 210rpx;
	height: 260rpx;
	margin-right: 20rpx;
	border-top-left-radius: 10rpx;
	border-bottom-left-radius: 50rpx;
}

.k-list .item .left image {
	width: inherit;
	height: inherit;
	border-top-left-radius: 10rpx;
	border-bottom-left-radius: 50rpx;
	border-top-right-radius: 50rpx;
	box-shadow: 12rpx 0rpx 10rpx rgba(216, 220, 223, 0.8);
}

.k-list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	padding: 20rpx;
	align-items: flex-start;
	padding-bottom: 5rpx;
}

.k-list .item .right .title {
	width: 100%;
	font-size: 30rpx;
	font-weight: bold;
	border-bottom: 1rpx dotted #ddd;
	padding: 5rpx 0rpx 15rpx 0;
	color: #000;
}

.k-list .item .right .desc {
	width: 100%;
	color: #888;
	font-size: 24rpx;  
	margin-top:14rpx;
	height: 65rpx; 
}


.k-list .item .right .line {
	width: 100%;
	color: #999;
	font-size: 24rpx;
	padding: 0rpx 0;
	line-height: 40rpx;
	display: flex;
	justify-content: flex-start
}

.k-list .item .right .tag-list .tag {
	padding: 5rpx 10rpx;
	background-color: #f2f2f2;
	margin-right: 5rpx; 
	border-radius: 5rpx;
	margin-bottom: 11rpx;
	margin-top:5rpx;
	color:#999;
}

.k-list .item .level {
	position: absolute;
	top: 0;
	left: 0;
	background-color: var(--projectColor);
	color: #fff;
	padding: 5rpx 15rpx;
	border-top-left-radius: 10rpx; 
	border-bottom-right-radius: 10rpx;
	font-size: 24rpx;
	z-index: 99999;
}